# Docker Compose Environment Variables for Saga Examples
# Copy this file to .env and adjust values as needed

# ==================== PostgreSQL Configuration ====================
# PostgreSQL database settings for Saga state persistence
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=saga

# PostgreSQL Exporter
POSTGRES_EXPORTER_PORT=9187

# ==================== Redis Configuration ====================
# Redis cache and state storage settings
REDIS_PORT=6379
REDIS_MAX_MEMORY=512mb

# Redis Exporter
REDIS_EXPORTER_PORT=9121

# ==================== RabbitMQ Configuration ====================
# RabbitMQ message broker settings
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672
RABBITMQ_METRICS_PORT=15692
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/

# ==================== NATS Configuration ====================
# NATS message broker settings (alternative to RabbitMQ)
NATS_PORT=4222
NATS_HTTP_PORT=8222
NATS_CLUSTER_PORT=6222
NATS_MAX_MEMORY=512MB
NATS_MAX_FILE_STORE=2GB

# ==================== Jaeger Configuration ====================
# Jaeger distributed tracing settings
JAEGER_UI_PORT=16686
JAEGER_COLLECTOR_HTTP=14268
JAEGER_COLLECTOR_GRPC=14250
JAEGER_AGENT_COMPACT=6831
JAEGER_AGENT_BINARY=6832
JAEGER_AGENT_CONFIG=5778
JAEGER_ZIPKIN=9411
JAEGER_STORAGE_TYPE=badger
JAEGER_LOG_LEVEL=info

# ==================== Prometheus Configuration ====================
# Prometheus metrics collection settings
PROMETHEUS_PORT=9090
PROMETHEUS_RETENTION_TIME=30d
PROMETHEUS_RETENTION_SIZE=10GB

# ==================== Grafana Configuration ====================
# Grafana visualization settings
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin
GRAFANA_THEME=dark

# ==================== Docker Network Configuration ====================
# Docker network settings
DOCKER_SUBNET=172.29.0.0/16
DOCKER_GATEWAY=172.29.0.1

# ==================== Application Configuration ====================
# Saga examples application settings (for future use)
