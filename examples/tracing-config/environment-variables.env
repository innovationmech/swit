# Environment Variables for Swit Framework Tracing Configuration
# These variables override the YAML configuration values
# Useful for containerized deployments and CI/CD pipelines

# Basic tracing configuration
SWIT_TRACING_ENABLED=true
SWIT_TRACING_SERVICE_NAME=env-configured-service

# Sampling configuration
SWIT_TRACING_SAMPLING_TYPE=traceidratio
SWIT_TRACING_SAMPLING_RATE=0.1

# Exporter configuration
SWIT_TRACING_EXPORTER_TYPE=jaeger
SWIT_TRACING_EXPORTER_ENDPOINT=http://localhost:14268/api/traces
SWIT_TRACING_EXPORTER_TIMEOUT=15s

# Jaeger-specific configuration
SWIT_TRACING_JAEGER_COLLECTOR_ENDPOINT=http://jaeger-collector:14268/api/traces
SWIT_TRACING_JAEGER_AGENT_ENDPOINT=jaeger-agent:6831
SWIT_TRACING_JAEGER_USERNAME=admin
SWIT_TRACING_JAEGER_PASSWORD=secret123

# OTLP-specific configuration  
SWIT_TRACING_OTLP_ENDPOINT=https://api.honeycomb.io/v1/traces
SWIT_TRACING_OTLP_INSECURE=false

# Resource attributes (standard)
SWIT_TRACING_RESOURCE_SERVICE_VERSION=v1.2.3
SWIT_TRACING_RESOURCE_ENVIRONMENT=production
SWIT_TRACING_RESOURCE_SERVICE_NAMESPACE=backend
SWIT_TRACING_RESOURCE_SERVICE_INSTANCE_ID=instance-abc123

# Custom resource attributes (use SWIT_TRACING_RESOURCE_CUSTOM_ prefix)
SWIT_TRACING_RESOURCE_CUSTOM_TEAM=platform
SWIT_TRACING_RESOURCE_CUSTOM_COST_CENTER=engineering
SWIT_TRACING_RESOURCE_CUSTOM_PROJECT=swit-framework

# Propagators (comma-separated)
SWIT_TRACING_PROPAGATORS=tracecontext,baggage,jaeger

# Examples for different environments:

# Development environment
# SWIT_TRACING_ENABLED=true
# SWIT_TRACING_EXPORTER_TYPE=console
# SWIT_TRACING_SAMPLING_RATE=1.0
# SWIT_TRACING_RESOURCE_ENVIRONMENT=development

# Staging environment  
# SWIT_TRACING_ENABLED=true
# SWIT_TRACING_EXPORTER_TYPE=jaeger
# SWIT_TRACING_EXPORTER_ENDPOINT=http://jaeger-staging:14268/api/traces
# SWIT_TRACING_SAMPLING_RATE=0.3
# SWIT_TRACING_RESOURCE_ENVIRONMENT=staging

# Production environment
# SWIT_TRACING_ENABLED=true
# SWIT_TRACING_EXPORTER_TYPE=otlp
# SWIT_TRACING_OTLP_ENDPOINT=https://otlp-collector.prod.example.com
# SWIT_TRACING_SAMPLING_RATE=0.01
# SWIT_TRACING_RESOURCE_ENVIRONMENT=production