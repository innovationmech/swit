# SWIT 分布式追踪演示环境配置
# 此文件包含演示脚本使用的默认配置

# ===== 服务端口配置 =====
ORDER_SERVICE_PORT=8081
ORDER_SERVICE_GRPC_PORT=9081
PAYMENT_SERVICE_GRPC_PORT=9082
INVENTORY_SERVICE_PORT=8083
INVENTORY_SERVICE_GRPC_PORT=9083
JAEGER_UI_PORT=16686
JAEGER_COLLECTOR_PORT=14268

# ===== 测试配置 =====
LOAD_TEST_REQUESTS=100
LOAD_TEST_CONCURRENCY=10
LOAD_TEST_DURATION=30
LOAD_TEST_TIMEOUT=30
DEMO_DELAY_SECONDS=2

# ===== Jaeger 配置 =====
JAEGER_ENDPOINT=http://localhost:14268/api/traces
JAEGER_SAMPLING_RATE=1.0

# ===== 日志配置 =====
LOG_LEVEL=info

# ===== 追踪配置 =====
TRACING_ENABLED=true
TRACING_SAMPLING_RATE=1.0

# ===== Docker 配置 =====
DOCKER_COMPOSE_PROJECT_NAME=distributed-tracing
DOCKER_NETWORK_NAME=tracing-network

# ===== 健康检查配置 =====
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3
HEALTH_CHECK_INTERVAL=30

# ===== 监控配置 =====
MONITORING_ENABLED=true
METRICS_COLLECTION_ENABLED=true
ALERT_THRESHOLDS_CPU=80
ALERT_THRESHOLDS_MEMORY=85
ALERT_THRESHOLDS_DISK=90

# ===== 数据配置 =====
DATA_RETENTION_HOURS=24
LOG_RETENTION_DAYS=7
BACKUP_ENABLED=false

# ===== 开发配置 =====
DEV_MODE=true
DEBUG_ENABLED=false
MOCK_SERVICES_ENABLED=false