{
  "dashboard": {
    "id": null,
    "title": "Business Metrics Dashboard",
    "tags": ["business", "kpis", "e-commerce"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Revenue Overview",
        "type": "stat",
        "targets": [
          {
            "expr": "swit_business_total_revenue_dollars",
            "legendFormat": "Total Revenue",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 10000},
                {"color": "red", "value": 50000}
              ]
            },
            "unit": "currencyUSD"
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Orders Created",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(swit_business_orders_created_total[1h]) * 3600",
            "legendFormat": "Orders/Hour",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 10},
                {"color": "green", "value": 50}
              ]
            },
            "unit": "short"
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0}
      },
      {
        "id": 3,
        "title": "Active Users",
        "type": "stat",
        "targets": [
          {
            "expr": "swit_business_active_users_total",
            "legendFormat": "Active Users",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 100},
                {"color": "green", "value": 500}
              ]
            },
            "unit": "short"
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0}
      },
      {
        "id": 4,
        "title": "Conversion Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "avg(swit_business_conversion_rate_percent)",
            "legendFormat": "Conversion Rate",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 2},
                {"color": "green", "value": 5}
              ]
            },
            "unit": "percent"
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0}
      },
      {
        "id": 5,
        "title": "Revenue by Region",
        "type": "piechart",
        "targets": [
          {
            "expr": "swit_business_regional_revenue_dollars",
            "legendFormat": "{{region}}",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 9, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 6,
        "title": "Order Value Distribution",
        "type": "histogram",
        "targets": [
          {
            "expr": "increase(swit_business_order_value_dollars_bucket[1h])",
            "legendFormat": "{{le}}",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 9, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 7,
        "title": "Payment Methods Usage",
        "type": "bargauge",
        "targets": [
          {
            "expr": "swit_business_payment_method_usage",
            "legendFormat": "{{method}}",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 17}
      },
      {
        "id": 8,
        "title": "Cache Performance",
        "type": "timeseries",
        "targets": [
          {
            "expr": "swit_business_cache_hit_rate * 100",
            "legendFormat": "Hit Rate %",
            "refId": "A"
          },
          {
            "expr": "rate(swit_business_cache_operations_total[5m])",
            "legendFormat": "Operations/sec",
            "refId": "B"
          }
        ],
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 17}
      },
      {
        "id": 9,
        "title": "Inventory Levels",
        "type": "table",
        "targets": [
          {
            "expr": "swit_business_inventory_levels",
            "format": "table",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 17}
      }
    ],
    "time": {"from": "now-1h", "to": "now"},
    "refresh": "10s",
    "schemaVersion": 27,
    "version": 1
  }
}